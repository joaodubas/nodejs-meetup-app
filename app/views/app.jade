doctype html
html(lang="pt-BR")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title NodeJS Meetup
    link(
      rel="stylesheet",
      href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css"
    )
    link(
      rel="stylesheet",
      href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap-theme.min.css"
    )
  body
    .container
      .row
        #app-note-message.col-md-8.col-md-offset-2
    .container
      .row
        .col-md-8.col-md-offset-2
          h1 Notas
          .row
            .col-md-12
              form#app-note-create(role="form", method="post", action="/api/create")
                input(type="hidden", name="_csrf", value=csrf)
                .form-group
                  .col-md-12
                    input.form-control(
                      type="text",
                      id="id-note",
                      name="note",
                      placeholder="Nota"
                    )
          #app-note-container.row
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js")
    script(src='/scripts/app.js')
